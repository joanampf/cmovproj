<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".MainActivity" >

    <TableRow
        android:id="@+id/dataLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#ffeebb"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/playerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backgrounddata"
            android:gravity="center"
            android:text="Player\nName"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/playerScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backgrounddata"
            android:gravity="center"
            android:text="Player\nScore"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/timeLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backgrounddata"
            android:gravity="center"
            android:text="Time\nLeft"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/numeberPlayers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backgrounddata2"
            android:gravity="center"
            android:text="Number\nPlayers"
            android:textSize="20sp" />
    </TableRow>

        <RelativeLayout
            android:id="@+id/moveLayout"
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_height="151dp" >

            <ImageButton
                android:id="@+id/botaobaixo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/boatodir"
                android:src="@drawable/botaobaixo" />

            <ImageButton
                android:id="@+id/botaoesq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/botaocima"
                android:layout_toLeftOf="@+id/botaobaixo"
                android:src="@drawable/botaoesq" />

            <ImageButton
                android:id="@+id/botaocima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/boatodir"
                android:layout_toRightOf="@+id/botaoesq"
                android:src="@drawable/botaocima" />

            <ImageButton
                android:id="@+id/boatodir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/botaobaixo"
                android:layout_alignParentRight="true"
                android:src="@drawable/boatodir" />

            <Button
                android:id="@+id/bomb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/botaoesq"
                android:gravity="center_vertical"
                android:text="Bomb" />

        </RelativeLayout>
</RelativeLayout>